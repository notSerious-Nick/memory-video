extends ../base

block content
    video(controls, src=`/${video.videoUrl}`)
    h4 #{video.description}
    ul
        each tag in video.hashtags
            li=tag 
    small made by #{video.owner.username}
    small #{video.meta.views} #{video.meta.views === 1 ? "view" : "views"}
    if String(video.owner._id) === String(user._id)
        a(href=`${video.id}/edit`) video edit &rarr;
        br
        a(href=`${video.id}/delete`) video delete &rarr;