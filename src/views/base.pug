doctype html
html(lang="ko")
    head 
        title  #{pageTitle} | Memory
        link(rel="stylesheet" href="https://unpkg.com/mvp.css")
    body
        header
            h1=pageTitle       
        main
            nav
                ul
                    li 
                        a(href="/") Home  
                    li 
                        a(href="/videos/upload") Upload  
                    li
                        a(href="/search") Search  
                    if loggedIn
                        li
                            a(href="/users/logout") Log Out
                        li
                            a(href="/profile") #{user.username}
                    else 
                        li
                            a(href="/join") Join  
                        li
                            a(href="/login") Login
            block content
        include partials/footer
        